<div class="container">
  <div class="jumbotron" id="tagline">
      <h1>Burger eater</h1>
      <br>
      <h4>Create your own burger</h4>
  </div>
  <div class="row align-items-center">
    <div class="col-sm-6">
      <div class="panel panel-default" id="right">
        <div class="panel-heading"><h2><strong>Add a burger</strong></h2></div>
          <form class="create-form">
            
            <div class="form-group"> <br>
              <label for="new-burger">Burger Name:</label>
              <input type="text" id="new-burger" name="name">
                      <button class="btn btn-light" type="submit">Add Burger</button>
            </div>

          </form>
      </div>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-sm-6">
      <div class="panel panel-default" id="right">
        <div class="panel-heading"><h4><strong>Burgers ready to be eaten</strong></h4>
          <p>Select the burger you will devour</p>
        </div>
        <br>
          <ul>
            {{#each burgers}}
              {{#unless devoured}}
                {{> burger/burger-block devoured=false}}
              {{/unless}}
            {{/each}}
          </ul>
      </div>
    </div>
    <div class="col-sm-6">
        <div class="panel panel-default" id="left">
          <div class="panel-heading"><h4><strong>Devoured Burgers</strong></h4>
          <p>Trash it or save the leftovers</p>
          </div>
          <br>
            <ul>
              {{#each burgers}}
                {{#if devoured}}
                  {{> burger/burger-block devoured=true}}
                {{/if}}
              {{/each}}
            </ul>
          </div>
      </div>
  </div>

</div>